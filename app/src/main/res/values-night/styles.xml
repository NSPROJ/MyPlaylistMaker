<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">22sp</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="AppTextViewStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SettingsTextStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SettingsMainTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginStart">@dimen/side_padding</item>
    </style>

    <style name="CustomButtonBackSettingsStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="iconSize">50dp</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="FrameSettingsStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/side_padding</item>
        <item name="android:paddingEnd">@dimen/padding_End</item>
    </style>

    <style name="LinearSettingsStyle">
        <item name="android:background">@color/white</item>
    </style>

    <style name="SwitchStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginStart">@dimen/icon_padding</item>
        <item name="android:checked">false</item>
    </style>

    <style name="IconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginTop">@dimen/layout_marginBottom</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="PurpleLinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/YP_black</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="WhiteBackgroundLinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/YP_black</item>
    </style>

    <style name="AppArrowImageView">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:src">@drawable/strelka</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="AppTitleTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginStart">@dimen/side_padding</item>
        <item name="android:text">@string/title_settings</item>
    </style>

    <style name="AppTitleSearchTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginStart">@dimen/side_padding</item>
        <item name="android:text">@string/search</item>
    </style>

    <style name="SearchLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@drawable/corners_night</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="SearchEditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">start|center</item>
        <item name="android:hint">@string/search</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">15</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="SearchImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:src">@drawable/light_mode2</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:tint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="ClearSearchImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:clickable">true</item>
        <item name="android:src">@drawable/krest</item>
        <item name="android:visibility">invisible</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="TrackLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settingsSize_61dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/YP_black</item>
    </style>

    <style name="ArtistTimeTextViewStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_11sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TrackTitleTextViewStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/yesterday</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="ModeIconImageViewStyle">
        <item name="android:layout_width">@dimen/icon_size_24dp</item>
        <item name="android:layout_height">@dimen/icon_size_24dp</item>
        <item name="android:src">@drawable/mode</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginEnd">@dimen/_10dp</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="ArtistNameTextViewStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/_11sp</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="ImageDotStyle">
        <item name="android:src">@drawable/ic_dot_night</item>
        <item name="android:contentDescription">@string/ic_icon</item>
    </style>

    <style name="RefreshButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/button_size</item>
        <item name="android:padding">6dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PlaceholderTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">19dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/nothing_to_show</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">19sp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="CustomImageViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="srcCompat">@drawable/strelka</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="MediaTextStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PlayStyle">
        <item name="srcCompat">@drawable/vectorplaylight</item>
    </style>

    <style name="FavStyle">
        <item name="srcCompat">@drawable/vectorfav_night</item>
    </style>

    <style name="AddStyle">
        <item name="srcCompat">@drawable/vectoradd_night</item>
    </style>

    <style name="MediaTextStyle2">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="WhiteBackgroundLayoutStyle">
        <item name="android:background">@color/YP_black</item>
    </style>

    <style name="PauseStyle">
        <item name="srcCompat">@drawable/pause_light</item>
    </style>

    <style name="PlaceholderNothingStyle">
        <item name="srcCompat">@drawable/ic_placeholder_light</item>
    </style>

    <style name="PlaceholderText" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">19sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="tabTextAppearance">@android:style/TextAppearance.Widget.TabWidget</item>
    </style>

</resources>