<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/PurpleLinearLayoutStyle">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_n"
            style="@style/AppTextViewStyle"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/searchButton"
            style="@style/AppButtonStyle"
            android:text="@string/title_search"
            android:textAllCaps="false"
            app:icon="@drawable/light_mode2"/>


        <Button
            android:id="@+id/mediaButton"
            android:textAllCaps="false"
            style="@style/AppButtonStyle"
            android:text="@string/title_media_library"
            app:icon="@drawable/light_mode1"/>

        <Button
            android:id="@+id/settingsButton"
            android:textAllCaps="false"
            style="@style/AppButtonStyle"
            android:text="@string/title_settings"
            app:icon="@drawable/light_mode"/>
    </LinearLayout>

</LinearLayout>