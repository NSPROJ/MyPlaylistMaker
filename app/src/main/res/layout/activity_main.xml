<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/mainSize_16dp"
    android:background="@color/purple"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/app_n"
            android:textSize="@dimen/main_textSize_22sp"
            android:textColor="@color/white"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/ys_display_medium"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/searchButton"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_200dp"
            android:backgroundTint="@color/white"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginBottom="@dimen/bottom_main16dp"
            android:fontFamily="@font/ys_display_medium"
            app:cornerRadius="@dimen/corners_16dp"
            app:iconGravity="textStart"
            app:iconTint="@color/black"
            android:textSize="@dimen/buttonText_22sp"
            android:text="@string/title_search"
            android:textAllCaps="false"
            app:icon="@drawable/light_mode2"/>


        <Button
            android:id="@+id/mediaButton"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_200dp"
            android:backgroundTint="@color/white"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginBottom="@dimen/bottom_main16dp"
            android:fontFamily="@font/ys_display_medium"
            app:cornerRadius="@dimen/corners_16dp"
            app:iconGravity="textStart"
            app:iconTint="@color/black"
            android:textSize="@dimen/buttonText_22sp"
            android:text="@string/title_media_library"
            app:icon="@drawable/light_mode1"/>

        <Button
            android:id="@+id/settingsButton"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_200dp"
            android:backgroundTint="@color/white"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginBottom="@dimen/bottom_main16dp"
            android:fontFamily="@font/ys_display_medium"
            app:cornerRadius="@dimen/corners_16dp"
            app:iconGravity="textStart"
            app:iconTint="@color/black"
            android:textSize="@dimen/buttonText_22sp"
            android:text="@string/title_settings"
            app:icon="@drawable/light_mode"/>
    </LinearLayout>

</LinearLayout>