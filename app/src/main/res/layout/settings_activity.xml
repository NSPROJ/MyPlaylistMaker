<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:visibility="visible"
    tools:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/arrow1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="5dp"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"
            android:src="@drawable/strelka"
            app:tint="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:fontFamily="@font/ys_display_medium"
            android:textSize="22sp"
            android:layout_marginStart="@dimen/side_padding"
            android:text="@string/title_settings"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/indentation">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/settingsSize_61dp"
            android:paddingTop="@dimen/settings_padding"
            android:paddingBottom="@dimen/settings_padding">



                <Switch
                    android:id="@+id/set_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|end"
                    tools:ignore="UseSwitchCompatOrMaterialXml,TouchTargetSizeCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:fontFamily="@font/ys_display_regular"
                android:textSize="@dimen/settings_textSize_18sp"
                android:text="@string/title_dark_theme" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/settingsSize_61dp"
            android:paddingTop="@dimen/settings_padding"
            android:paddingBottom="@dimen/settings_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:fontFamily="@font/ys_display_regular"
                android:text="@string/title_share_app"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="@dimen/settings_textSize_18sp" />

            <ImageView
                android:id="@+id/set_share"
                android:layout_width="@dimen/icon_size_24dp"
                android:layout_height="@dimen/icon_size_24dp"
                android:layout_gravity="end|center_vertical"
                android:src="@drawable/share" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/settingsSize_61dp"
            android:paddingTop="@dimen/settings_padding"
            android:paddingBottom="@dimen/settings_padding">

            <TextView
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:fontFamily="@font/ys_display_regular"
                android:textSize="@dimen/settings_textSize_18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/title_write_support" />

            <ImageView
                android:id="@+id/set_support"
                android:layout_width="@dimen/icon_size_24dp"
                android:layout_height="@dimen/icon_size_24dp"
                android:layout_gravity="end"
                android:src="@drawable/support" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/settingsSize_61dp"
            android:paddingTop="@dimen/settings_padding"
            android:paddingBottom="@dimen/settings_padding">

            <TextView
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:fontFamily="@font/ys_display_regular"
                android:textSize="@dimen/settings_textSize_18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/title_user_agreement" />

            <ImageView
                android:id="@+id/set_offer"
                android:layout_width="@dimen/icon_size_24dp"
                android:layout_height="@dimen/icon_size_24dp"
                android:layout_gravity="end"
                android:src="@drawable/mode" />

        </FrameLayout>

    </LinearLayout>

</LinearLayout>